                    <publicPackages>
                        <publicPackage>org.gephi.datalab.plugin.manipulators.columns</publicPackage>
                        <publicPackage>org.gephi.datalab.plugin.manipulators.columns.merge</publicPackage>
                        <publicPackage>org.gephi.datalab.plugin.manipulators.edges</publicPackage>
                        <publicPackage>org.gephi.datalab.plugin.manipulators.general</publicPackage>
                        <publicPackage>org.gephi.datalab.plugin.manipulators.nodes</publicPackage>
                        <publicPackage>org.gephi.datalab.plugin.manipulators.values</publicPackage>
                    </publicPackages>
                </configuration>
